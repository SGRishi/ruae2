{
  "name": "ruae2",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build-frontend.mjs",
    "lint": "npm run lint:syntax && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:syntax": "node -e \"import('./worker.js')\" && node --check public/auth-client.js && node --check public/app.js && node --check public/login/login.js && node --check public/admin/admin.js && node --check public/maths/maths.js && node --check scripts/build-frontend.mjs",
    "format": "prettier --write \"README.md\" \"DEPLOY.md\" \"SECURITY.md\" \"TEST_PLAN.md\" \"CHANGELOG.md\" \"package.json\" \"eslint.config.js\" \"tsconfig.typecheck.json\" \".prettierrc.json\" \".github/workflows/*.yml\" \"tests/**/*.mjs\"",
    "format:check": "prettier --check \"README.md\" \"DEPLOY.md\" \"SECURITY.md\" \"TEST_PLAN.md\" \"CHANGELOG.md\" \"package.json\" \"eslint.config.js\" \"tsconfig.typecheck.json\" \".prettierrc.json\" \".github/workflows/*.yml\" \"tests/**/*.mjs\"",
    "smoke:deploy": "bash scripts/smoke-deploy.sh",
    "smoke:maths": "bash scripts/maths-smoke.sh",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "test": "node --test tests/**/*.test.mjs",
    "test:e2e": "playwright test",
    "qa": "npm run test:unit && npm run test:smoke && npm run test:e2e",
    "test:unit": "node ./qa/unit.js",
    "test:smoke": "node ./qa/smoke.js",
    "qa:watch": "nodemon -e js,mjs,ts,json,html,css --ignore node_modules --ignore data --exec \"npm run qa\"",
    "dev": "npx wrangler dev --port 8788",
    "dev:test": "CI=1 npx wrangler dev --port 8789 --env test"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "pdfjs-dist": "^4.10.38"
  }
}
